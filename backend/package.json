{
  "name": "todo-backend",
  "version": "1.0.0",
  "description": "Todo API Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:ci": "jest --coverage --ci --watchAll=false --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "cobertura",
      "html"
    ],
    "coverageDirectory": "coverage",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./backend",
          "outputName": "junit.xml"
        }
      ]
    ],
    "globalTeardown": "./teardown.js"
  }
}

